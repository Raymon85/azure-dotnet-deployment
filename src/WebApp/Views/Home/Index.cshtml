@model WebApp.Models.SubscribeViewModel
@{
    ViewData["Title"] = "Home";
}

<div class="text-center">
    <div class="py-5">
        <h1 class="hero-title fw-bold">Rayan</h1>
        <p class="hero-subtitle lead mt-3">
            Azure Cloud Deployment Project
        </p>
        <hr class="divider-gradient w-50 mx-auto my-4" />
    </div>

    <div class="row justify-content-center mt-4">
        <div class="col-md-4 mb-4">
            <div class="card card-feature shadow-sm h-100">
                <div class="card-body p-4">
                    <h5 class="card-title">.NET MVC</h5>
                    <p class="card-text">Built with ASP.NET Core MVC framework, following the Model-View-Controller pattern.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card card-feature shadow-sm h-100">
                <div class="card-body p-4">
                    <h5 class="card-title">Azure VM</h5>
                    <p class="card-text">Deployed on an Azure Virtual Machine running Ubuntu Server with automated provisioning.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card card-feature shadow-sm h-100">
                <div class="card-body p-4">
                    <h5 class="card-title">Infrastructure as Code</h5>
                    <p class="card-text">Azure Bicep templates for reproducible and version-controlled infrastructure.</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Subscribe Section -->
    <div class="row justify-content-center mt-5">
        <div class="col-md-6">
            <div class="card card-subscribe shadow-lg">
                <div class="card-body p-4">
                    <h4 class="card-title mb-3">Subscribe to Updates</h4>
                    <p class="mb-4">Enter your email to receive project updates and notifications.</p>

                    @if (TempData["SubscribeSuccess"] != null)
                    {
                        <div class="alert alert-success" role="alert">
                            @TempData["SubscribeSuccess"]
                        </div>
                    }

                    @if (TempData["SubscribeError"] != null)
                    {
                        <div class="alert alert-warning" role="alert">
                            @TempData["SubscribeError"]
                        </div>
                    }

                    <form asp-action="Subscribe" asp-controller="Home" method="post">
                        @Html.AntiForgeryToken()
                        <div class="input-group mb-1">
                            <input asp-for="Email"
                                   class="form-control"
                                   placeholder="name@example.com"
                                   type="text" />
                            <button type="submit" class="btn btn-subscribe">Subscribe</button>
                        </div>
                        <span asp-validation-for="Email"></span>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="mt-5 p-4 system-info">
        <h4>System Information</h4>
        <p class="mb-1"><strong>Server Time:</strong> @DateTime.UtcNow.ToString("yyyy-MM-dd HH:mm:ss UTC")</p>
        <p class="mb-1"><strong>Runtime:</strong> @System.Runtime.InteropServices.RuntimeInformation.FrameworkDescription</p>
        <p class="mb-0"><strong>OS:</strong> @System.Runtime.InteropServices.RuntimeInformation.OSDescription</p>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
