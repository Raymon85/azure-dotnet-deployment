@model List<WebApp.Models.SubscriberEntry>
@{
    ViewData["Title"] = "Subscribers";
}

<h2 class="page-header mb-4">Subscribers</h2>

@if (TempData["SubscribersMessage"] != null)
{
    <div class="alert alert-info" role="alert">
        @TempData["SubscribersMessage"]
    </div>
}

@if (Model.Count == 0)
{
    <div class="alert alert-warning" role="alert">
        No subscribers yet. Go to the <a asp-action="Index" class="alert-link text-white fw-bold text-decoration-underline">Home page</a> to subscribe.
    </div>
}
else
{
    <p class="mb-3">Total subscribers: <span class="badge-count">@Model.Count</span></p>

    <div class="card shadow">
        <div class="card-body p-0">
            <table class="table table-hover mb-0">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Email</th>
                        <th>Subscribed At (UTC)</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @for (var i = 0; i < Model.Count; i++)
                    {
                        <tr>
                            <td class="fw-bold">@(i + 1)</td>
                            <td>@Model[i].Email</td>
                            <td>@Model[i].SubscribedAt.ToString("yyyy-MM-dd HH:mm:ss")</td>
                            <td>
                                <form asp-action="DeleteSubscriber" asp-controller="Home" method="post" style="display:inline;">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="email" value="@Model[i].Email" />
                                    <button type="submit" class="btn btn-danger btn-sm"
                                            onclick="return confirm('Are you sure you want to remove @Model[i].Email?');">
                                        Delete
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}
